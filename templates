    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // المنت‌های مورد نیاز
            const currentTimeEl = document.getElementById('current-time');
            const totalDevicesEl = document.getElementById('total-devices');
            const onlineDevicesEl = document.getElementById('online-devices');
            const offlineDevicesEl = document.getElementById('offline-devices');
            const uptimePercentEl = document.getElementById('uptime-percent');
            const gatewaysTable = document.getElementById('gateways-table');
            const refreshBtn = document.getElementById('refresh-btn');
            
            // المنت‌های گیت‌وی
            const gateway1NameEl = document.getElementById('gateway1-name');
            const gateway2NameEl = document.getElementById('gateway2-name');
            const gateway3NameEl = document.getElementById('gateway3-name');
            const gateway4NameEl = document.getElementById('gateway4-name');
            const gateway5NameEl = document.getElementById('gateway5-name');
            const gateway6NameEl = document.getElementById('gateway6-name');
            
            // المنت‌های کلاینت
            const clientsGw1El = document.getElementById('clients-gw1');
            const clientsGw2El = document.getElementById('clients-gw2');
            const clientsGw3El = document.getElementById('clients-gw3');
            const clientsGw4El = document.getElementById('clients-gw4');
            const clientsGw5El = document.getElementById('clients-gw5');
            const clientsGw6El = document.getElementById('clients-gw6');
            
            // المنت‌های لاگ
            const logGw1El = document.getElementById('log-gw1');
            const logGw2El = document.getElementById('log-gw2');
            const logGw3El = document.getElementById('log-gw3');
            const logGw4El = document.getElementById('log-gw4');
            const logGw5El = document.getElementById('log-gw5');
            const logGw6El = document.getElementById('log-gw6');
            
            // نگاشت نام‌های گیت‌وی به المنت‌ها
            const gatewayNameElements = {
                'gw1': gateway1NameEl,
                'gw2': gateway2NameEl,
                'gw3': gateway3NameEl,
                'gw4': gateway4NameEl,
                'gw5': gateway5NameEl,
                'gw6': gateway6NameEl
            };
            
            // نگاشت نام‌های گیت‌وی به المنت‌های کلاینت
            const clientsElements = {
                'gw1': clientsGw1El,
                'gw2': clientsGw2El,
                'gw3': clientsGw3El,
                'gw4': clientsGw4El,
                'gw5': clientsGw5El,
                'gw6': clientsGw6El
            };
            
            // نگاشت نام‌های گیت‌وی به المنت‌های لاگ
            const logElements = {
                'gw1': logGw1El,
                'gw2': logGw2El,
                'gw3': logGw3El,
                'gw4': logGw4El,
                'gw5': logGw5El,
                'gw6': logGw6El
            };
            
            // متغیرهای کلی
            let autoRefreshInterval = null;
            
            // نمایش زمان فعلی
            function updateCurrentTime() {
                const now = new Date();
                const options = { 
                    year: 'numeric', 
                    month: 'numeric', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    hour12: false
                };
                currentTimeEl.innerHTML = `<i class="far fa-clock me-1"></i> ${now.toLocaleString('fa-IR', options)}`;
            }
            
            // دریافت داده‌ها از API
            async function fetchData() {
                try {
                    // نمایش وضعیت بروزرسانی
                    refreshBtn.classList.add('refreshing');
                    refreshBtn.innerHTML = '<i class="fas fa-sync-alt me-1"></i> در حال بروزرسانی...';
                    
                    // دریافت خلاصه وضعیت
                    const summaryResponse = await fetch('/api/summary');
                    const summaryData = await summaryResponse.json();
                    
                    // دریافت لیست گیت‌وی‌ها
                    const gatewaysResponse = await fetch('/api/gateways');
                    const gatewaysData = await gatewaysResponse.json();
                    
                    // بروزرسانی خلاصه وضعیت
                    updateSummary(summaryData);
                    
                    // بروزرسانی جدول گیت‌وی‌ها
                    updateGatewaysTable(gatewaysData, summaryData);
                    
                    // بروزرسانی نام‌های گیت‌وی در هدر بخش‌های کلاینت
                    updateGatewayNames(gatewaysData);
                    
                    // بروزرسانی کلاینت‌های هر گیت‌وی
                    await updateAllClients();
                    
                    // بروزرسانی وضعیت پایان یافت
                    refreshBtn.classList.remove('refreshing');
                    refreshBtn.innerHTML = '<i class="fas fa-sync-alt me-1"></i> بروزرسانی';
                    
                } catch (error) {
                    console.error('Error fetching data:', error);
                    alert('خطا در دریافت اطلاعات. لطفا مجددا تلاش کنید.');
                    
                    refreshBtn.classList.remove('refreshing');
                    refreshBtn.innerHTML = '<i class="fas fa-sync-alt me-1"></i> بروزرسانی';
                    }
            }
            
            // بروزرسانی خلاصه وضعیت
            function updateSummary(data) {
                totalDevicesEl.textContent = data.total_devices;
                onlineDevicesEl.textContent = data.online_devices;
                offlineDevicesEl.textContent = data.offline_devices;
                uptimePercentEl.textContent = `${data.uptime_percent}%`;
            }
            
            // بروزرسانی جدول گیت‌وی‌ها
            function updateGatewaysTable(gateways, summaryData) {
                gatewaysTable.innerHTML = '';
                
                gateways.forEach(gateway => {
                    const isOnline = gateway.status === 1;
                    const gwData = summaryData.gateways[gateway.name] || { total: 0, online: 0 };
                    
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>
                            <span class="status-indicator ${isOnline ? 'status-online' : 'status-offline'}"></span>
                            ${gateway.name}
                        </td>
                        <td>${gateway.ip}</td>
                        <td>
                            <span class="badge badge-status ${isOnline ? 'bg-success' : 'bg-danger'}">
                                ${isOnline ? 'آنلاین' : 'آفلاین'}
                            </span>
                        </td>
                        <td>${gwData.online} از ${gwData.total}</td>
                        <td>${formatDate(gateway.lastChecked)}</td>
                        <td>
                            <a href="/download/history/${gateway.name}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-download"></i>
                            </a>
                        </td>
                    `;
                    
                    gatewaysTable.appendChild(row);
                });
            }
            
            // بروزرسانی نام‌های گیت‌وی در هدر بخش‌های کلاینت
            function updateGatewayNames(gateways) {
                gateways.forEach(gateway => {
                    const nameElement = gatewayNameElements[gateway.name];
                    if (nameElement) {
                        nameElement.textContent = gateway.name;
                    }
                });
            }
            
            // بروزرسانی کلاینت‌های همه گیت‌وی‌ها
            async function updateAllClients() {
                const gatewayNames = ['gw1', 'gw2', 'gw3', 'gw4', 'gw5', 'gw6'];
                
                for (const gwName of gatewayNames) {
                    try {
                        // دریافت کلاینت‌های گیت‌وی
                        const response = await fetch(`/api/clients/${gwName}`);
                        const clients = await response.json();
                        
                        // بروزرسانی جدول کلاینت‌ها
                        updateClientsTable(gwName, clients);
                        
                        // بروزرسانی لاگ‌های کلاینت‌ها
                        await updateClientLogs(gwName);
                        
                    } catch (error) {
                        console.error(`Error fetching clients for ${gwName}:`, error);
                        // در صورت خطا، نمایش پیام خطا در جدول
                        const clientsTable = clientsElements[gwName];
                        if (clientsTable) {
                            clientsTable.innerHTML = `
                                <tr>
                                    <td colspan="4" class="text-center text-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        خطا در دریافت اطلاعات کلاینت‌ها
                                    </td>
                                </tr>
                            `;
                        }
                    }
                }
            }
            
            // بروزرسانی جدول کلاینت‌های یک گیت‌وی
            function updateClientsTable(gatewayName, clients) {
                const clientsTable = clientsElements[gatewayName];
                if (!clientsTable) return;
                
                // پاک کردن محتوای قبلی
                clientsTable.innerHTML = '';
                
                // اگر کلاینتی وجود نداشت
                if (clients.length === 0) {
                    clientsTable.innerHTML = `
                        <tr>
                            <td colspan="4" class="text-center">
                                هیچ کلاینتی یافت نشد
                            </td>
                        </tr>
                    `;
                    return;
                }
                
                // نمایش کلاینت‌ها
                clients.forEach(client => {
                    const isOnline = client.status === 1;
                    
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>
                            <span class="status-indicator ${isOnline ? 'status-online' : 'status-offline'}"></span>
                            ${client.name}
                        </td>
                        <td>${client.ip}</td>
                        <td>
                            <span class="badge badge-status ${isOnline ? 'bg-success' : 'bg-danger'}">
                                ${isOnline ? 'آنلاین' : 'آفلاین'}
                            </span>
                        </td>
                        <td>
                            <a href="/download/history/${client.name}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-download"></i>
                            </a>
                        </td>
                    `;
                    
                    clientsTable.appendChild(row);
                });
            }
            
            // بروزرسانی لاگ‌های کلاینت‌های یک گیت‌وی
            async function updateClientLogs(gatewayName) {
                try {
                    // دریافت کلاینت‌های گیت‌وی
                    const clientsResponse = await fetch(`/api/clients/${gatewayName}`);
                    const clients = await clientsResponse.json();
                    
                    // لاگ کانتینر مربوطه
                    const logContainer = logElements[gatewayName];
                    if (!logContainer) return;
                    
                    // پاک کردن محتوای قبلی
                    logContainer.innerHTML = '';
                    
                    // اگر کلاینتی وجود نداشت
                    if (clients.length === 0) {
                        logContainer.innerHTML = '<div class="text-center text-muted">لاگی موجود نیست</div>';
                        return;
                    }
                    
                    // برای هر کلاینت، تاریخچه را دریافت کن
                    let allLogs = [];
                    
                    for (const client of clients) {
                        try {
                            const historyResponse = await fetch(`/api/history/${client.name}?limit=5`);
                            const history = await historyResponse.json();
                            
                            // افزودن لاگ‌ها به آرایه کلی
                            allLogs = [...allLogs, ...history];
                        } catch (error) {
                            console.error(`Error fetching history for ${client.name}:`, error);
                        }
                    }
                    
                    // افزودن تاریخچه خود گیت‌وی
                    try {
                        const gwHistoryResponse = await fetch(`/api/history/${gatewayName}?limit=5`);
                        const gwHistory = await gwHistoryResponse.json();
                        allLogs = [...allLogs, ...gwHistory];
                    } catch (error) {
                        console.error(`Error fetching history for gateway ${gatewayName}:`, error);
                    }
                    
                    // مرتب‌سازی بر اساس زمان (جدیدترین اول)
                    allLogs.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                    
                    // محدود کردن به 10 لاگ آخر
                    allLogs = allLogs.slice(0, 10);
                    
                    // اگر لاگی وجود نداشت
                    if (allLogs.length === 0) {
                        logContainer.innerHTML = '<div class="text-center text-muted">لاگی موجود نیست</div>';
                        return;
                    }
                    
                    // نمایش لاگ‌ها
                    allLogs.forEach(log => {
                        const isOnline = log.status === 1;
                        const entry = document.createElement('div');
                        entry.className = `log-entry ${isOnline ? 'log-online' : 'log-offline'}`;
                        entry.innerHTML = `
                            <div class="d-flex justify-content-between align-items-center">
                                <span>${log.name}: ${isOnline ? 'متصل شد' : 'قطع شد'}</span>
                                <small class="text-muted">${formatTime(log.timestamp)}</small>
                            </div>
                        `;
                        
                        logContainer.appendChild(entry);
                    });
                    
                } catch (error) {
                    console.error(`Error updating logs for ${gatewayName}:`, error);
                    const logContainer = logElements[gatewayName];
                    if (logContainer) {
                        logContainer.innerHTML = '<div class="text-center text-danger">خطا در دریافت لاگ‌ها</div>';
                    }
                }
            }
            
            // فرمت تاریخ کامل
            function formatDate(dateStr) {
                if (!dateStr) return 'نامشخص';
                
                const date = new Date(dateStr);
                const options = { 
                    year: 'numeric', 
                    month: 'numeric', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    hour12: false
                };
                return date.toLocaleString('fa-IR', options);
            }
            
            // فرمت زمان (بدون تاریخ)
            function formatTime(dateStr) {
                if (!dateStr) return 'نامشخص';
                
                const date = new Date(dateStr);
                const options = { 
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    hour12: false
                };
                return date.toLocaleString('fa-IR', options);
            }
            
            // شروع بروزرسانی خودکار
            function startAutoRefresh() {
                if (autoRefreshInterval) {
                    clearInterval(autoRefreshInterval);
                }
                // بروزرسانی هر ۳۰ ثانیه
                autoRefreshInterval = setInterval(fetchData, 30000);
            }
            
            // اضافه کردن ایونت‌ها
            refreshBtn.addEventListener('click', fetchData);
            
            // راه‌اندازی اولیه
            updateCurrentTime();
            setInterval(updateCurrentTime, 1000);
            fetchData();
            startAutoRefresh();
        });
    </script>
</body>
</html>
